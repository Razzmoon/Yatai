<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>{% block metaTitle %}{% endblock metaTitle %}</title>
</head>

<body>

<header class="header">
    <nav class="d-flex justify-content-between align-items-center">
        <div id="connexion">
            {% if app.user %}
                <div class="d-flex align-items-center ">
                    <a class="mx-1 logout nodec" href="{{ path('app_logout') }}">déconnection</a>
                </div>
            {% else %}
                <a href="{{ path('app_login')}}">
                    <img src="{{ asset("img/connection.png") }}" class="img-fluid" alt="connexion"/>
                </a>
            {% endif %}
            {% if app.user %}
                {% if app.user.roles[0] == "ROLE_ADMIN" %}
                    <div class="admin-menu mx-1">
                        <a class="admin-article-list nodec" href="{{ path ('admin_article_List') }}">Liste des Articles</a>
                    </div>
                {% endif %}
            {% endif %}
        </div>

        <a href="{{ path('home') }}" class="titre1">
            <h1 class="Yatai">
                YATAI
            </h1>
        </a>
        <div id="panier">
            <img src="{{ asset("img/wicker-basket.png") }}" class="img-fluid" alt="" />
        </div>
    </nav>
{% block header %}
{% endblock header %}

</header>

<main>
    {% block main %}
    {% endblock main %}
</main>

<footer>
    <div class="row mx-0">
        <div class="col-4 d-flex align-items-center text-light">
            © Traiteur d'ailleur
        </div>
        <div class="col-4 d-flex justify-content-center">
            <img src="{{ asset("img/LOGO.png") }}" class="img-fluid rounded-circle logo" alt="Logo"/>
        </div>
        <ul class="col-4 d-flex align-items-center justify-content-end my-1">
            <li>
                <img src="{{ asset("img/facebook.png") }}" class="img-fluid reseaux mx-2" alt="Facebook" />
            </li>
            <li>
                <img src="{{ asset("img/instagram.png") }}"class="img-fluid reseaux mx-2" alt="Instagram"/>
            </li>
            <li>
                <img src="{{ asset("img/twitter.png") }}" class="img-fluid reseaux mx-2" alt="Twitter" />
            </li>
        </ul>
    </div>
</footer>
</body>
</html>
